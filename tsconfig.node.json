{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "preserveSymlinks": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,

    /* Alias configuration */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@teeth/*": ["src/features/clinic/components/teeth/*"],
      "@styles-cl/*": ["./src/features/clinic/styles"],
    }
  },
  "include": ["vite.config.ts", "src/service-worker.ts", "jest.config.ts"],
  "types": ["node", "jest"]
}