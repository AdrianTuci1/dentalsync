{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias configuration */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@teeth/*": ["src/features/clinic/components/teeth/*"],
      "@styles-cl/*": ["./src/features/clinic/styles"],
    }
  },
  "include": ["vite.config.ts"]
}